{
  "name": "server",
  "version": "1.0.0",
  "engines": {
    "node": "12.14.1"
  },
  "description": "back end server with node.js",
  "main": "app.js",
  "scripts": {
    "heroku-postbuild": "npm run install",
    "start": "babel-node app.js",
    "db": "babel-node ./db/index.js",
    "dev": "nodemon --exec \"npm start\"",
    "e2e": "mocha 'server-side/tests/e2e/*.js' --timeout 400000 --reporter mochawesome --reporter-options reportFilename=index",
    "test-report": "mocha 'server-side/tests/*.js' --timeout 10000 --reporter mochawesome",
    "test": "mocha --require @babel/register 'server-side/tests/*.js' --timeout 10000 ",
    "test-watch": "nodemon --exec \"npm test\"",
    "test-coverage": "nyc --reporter=lcov --reporter=text-lcov npm run test-watch",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "mocha-coverage": "mocha 'server-side/tests/*.js' --timeout 30000 --reporter mochawesome --reporter-options reportDir=report-mocha --reporter-options reportFilename=index"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danny00747/mean-stack-web-app.git"
  },
  "keywords": [
    "backend",
    "server"
  ],
  "author": "Daniel Olivier",
  "license": "MIT",
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "babel-plugin-inline-dotenv": "^1.2.2",
    "chai-http": "^4.3.0",
    "consola": "^2.11.3",
    "content-security-policy": "^0.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "expect-puppeteer": "^4.4.0",
    "mongodb": "^3.1.13",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.2",
    "mochawesome": "^6.1.1",
    "mongoose": "^5.9.3",
    "mongoose-unique-validator": "^2.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "puppeteer": "^3.0.4",
    "puppeteer-autoscroll-down": "^0.1.5",
    "readline": "^1.3.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.10.4",
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.7.3",
    "bcrypt": "^5.0.0",
    "email-validator": "^2.0.4",
    "istanbul": "^0.4.5",
    "nyc": "^15.0.1"
  }
}
